{
  "compilerOptions": {
    "target": "es6",                          /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017','ES2018' or 'ESNEXT'. */
    "module": "es6",
    "lib": ["es6", "dom"],
    "outDir": "./es6",                  /* Specify library files to be included in the compilation. */
    //"outFile": "./dist/pixi-tiled.js",             /* Concatenate and emit output to single file. */
    "strict": true,                           /* Enable all strict type-checking options. */
    "sourceMap": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist",
    "es6"
  ]
}